{
    "manifest_version": 3,
    "name": "QuickfireAI",
    "short_name": "QuickfireAI",
    "version": "0.0.0.2",
    "author": "netdrifter",
    "description": "A copilot for responding. Use AI to respond to messages faster and more efficiently.",
    "action": {
        "default_popup": "index.html",
        "default_title": "QuickfireAI"
    },
    "permissions": [
        "storage",
        "<all_urls>"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "content_scripts": [
        {
            "matches": ["https://extensionpay.com/*", "<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "externally_connectable": {
        "matches": ["https://quickfireai-dbb40-default-rtdb.firebaseio.com/*"]
    }
}
